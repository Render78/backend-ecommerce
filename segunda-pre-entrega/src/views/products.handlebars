<div class="container mt-5">
    <h1 class="mb-4">Lista de Productos</h1>
    <div class="row d-flex">
        {{#each products}}
        <div class="col-md-4 mb-4 d-flex align-items-stretch">
            <div class="card h-100">
                <div class="card-img-wrapper">
                    <img src="{{thumbnail}}" class="card-img-top" alt="{{title}}">
                </div>
                <div class="card-body d-flex flex-column">
                    <h4 class="card-title">{{title}}</h5>
                    <h5 class="card-subtitle">{{category}}</h3>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text mt-auto"><strong>Precio: </strong>${{price}}</p>
                    <a href="/api/products/get/{{_id}}" class="btn btn-primary mt-auto">Ver m√°s</a>
                    <button class="btn btn-success mt-2" onclick="agregarAlCarrito('{{id}}')">Agregar al carrito</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>