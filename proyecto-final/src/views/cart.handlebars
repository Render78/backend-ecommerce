<div class="container mt-5"></div>
<h1 class="mb-4">Cart Details</h1>

{{#if cart.products.length}}
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {{#each cart.products}}
        <tr>
            <td>{{this.product.name}}</td>
            <td>{{this.quantity}}</td>
            <td>${{this.product.price}}</td>
            <td>${{multiply this.product.price this.quantity}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<div class="mt-4">
    <h3 class="text-end">Total Price: ${{calculateTotal cart.products}}</h3>
</div>
{{else}}
<div class="alert alert-warning">
    <p>Your cart is empty.</p>
</div>
{{/if}}

<a href="/products" class="btn btn-primary mt-4">Continue Shopping</a>
</div>